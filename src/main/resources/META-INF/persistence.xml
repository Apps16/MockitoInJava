<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
             
    <persistence-unit name="default">
    	<class>com.bits.model.Scholar</class>
    	<class>com.bits.model.Attendence</class>
    	<class>com.bits.model.ScholarClass</class>
    	<class>com.bits.model.Subject</class>
    
        <properties>
            <property name="eclipselink.weaving" value="static"/>
            <property name="eclipselink.logging.level.weaver" value="OFF"/>
